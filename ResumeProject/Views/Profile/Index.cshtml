@model List<ResumeProject.Models.TblProfile>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Profil Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Profil Başlığı </th>
        <th>Profil Profil Açıklaması</th>
        <th>İsim </th>
        <th>Mail</th>
        <th>Adres</th>
        <th>Telefon Numaraı</th>
        <th>Facebook</th>
        <th>Twitter</th>
        <th>İnstagram</th>
        <th>Linkedin</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProfileID</td>
            <td>@item.ProfileTitle</td>
            <td>@item.ProfileDescription</td>
            <td>@item.Name</td>
            <td>@item.Mail</td>
            <td>@item.Adress</td>
            <td>@item.Phone</td>
            <td>@item.SocialMedia1</td>
            <td>@item.SocialMedia2</td>
            <td>@item.SocialMedia3</td>
            <td>@item.SocialMedia4</td>
            <td><a href="#" class=" btn btn-outline-danger">Sil</a></td>
            <td><a href="#" class=" btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Profile/AddProfile/" class=" btn btn-outline-primary"> Yeni Profil Girişi</a>